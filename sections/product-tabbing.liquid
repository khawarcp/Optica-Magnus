<!-- product details tabs section -->
<section class="product-dt-tabs-sec">
  <div class="container">
    <div class="custom-tabs">
      <ul class="ctm-tabs-ul d-flex align-items-center">
         {% if product.metafields.custom.text_description != blank %}
        <li class="active">
          <span data-toggle="description">
              {{ section.settings.tab_heading_one }}
          </span>
        </li>
        {% endif %}
        {% if product.metafields.custom.technical_specs != blank %}
        <li {% if product.metafields.custom.text_description == blank and product.metafields.custom.image_circle == blank %} class="active" {% endif %}>
          <span data-toggle="technical_info_tab">
              {{ section.settings.tab_heading_two }}
          </span>
        </li>
        {% endif %}
        {% if product.metafields.custom.image_circle != blank %}
         <li {% if product.metafields.custom.text_description == blank and product.metafields.custom.technical_specs == blank %} class="active" {% endif %}>
          <span data-toggle="image_circle_tab">
            {{ section.settings.tab_heading_three }}            
          </span>
        </li>
       {% endif %}
       {% if product.metafields.custom.user_manual != blank %}
         <li {% if product.metafields.custom.text_description == blank and product.metafields.custom.technical_specs == blank %} class="active" {% endif %}>
          <span data-toggle="user-manual">
            {{ section.settings.tab_heading_four }}
          </span>
        </li>
       {% endif %}
      </ul>
      <div class="tab-content">
        
        <div data-aos="fade-up" data-aos-duration="1100" data-target="description" class="ctm-tabs-pan active">
          {% if product.metafields.custom.text_description != blank %}
              <div class="description_text">
                {{ product.metafields.custom.text_description }}
              </div>
          {% endif %}
        </div>
        
        <div data-aos="fade-up" data-aos-duration="1100" data-target="technical_info_tab" class="ctm-tabs-pan {% if product.metafields.custom.text_description == blank and product.metafields.custom.image_circle == blank %} active {% endif %}">
          {% if product.metafields.custom.technical_specs != blank %}
          <div class="description_text">
             {{ product.metafields.custom.technical_specs }}
          </div>
          {% endif %}
        </div>
         <div data-aos="fade-up" data-aos-duration="1100" data-target="image_circle_tab" class="ctm-tabs-pan {% if product.metafields.custom.text_description == blank and product.metafields.custom.technical_specs == blank %} active {% endif %}">
          <div class="technical-info-block">
          {% if product.metafields.custom.image_circle != blank %}
              <img src="{{ product.metafields.custom.image_circle | img_url: 'master' }}" loading="lazy" alt="{{ section.settings.info_image.alt }}" class="img-fluid">
          {% endif %}
          </div>
        </div>
        {% if product.metafields.custom.user_manual != blank %}
        <div data-aos="fade-up" data-aos-duration="1100" data-target="user-manual" class="ctm-tabs-pan {% if product.metafields.custom.text_description == blank and product.metafields.custom.technical_specs == blank %} active {% endif %}">
          <div class="description_text">
             Click <a href="{{ section.settings.user_manual }}" download="Full_Frame_Finder_FrameFinder_Instructions_vs7.0.pdf"  target="_blank">here</a> download our User Manual
          </div>
        </div>
          {% endif %}
      </div>

    </div>
  </div>

</section>

{% schema %}
  {
    "name": "Product Tabbing",
    "settings": [
      {
        "type": "image_picker",
        "id": "info_image",
        "label": "Description Image"
      }, {
        "type": "image_picker",
        "id": "tech_image",
        "label": "Technical Image"
      },
      {
        "type": "text",
        "id": "tab_heading_one",
        "default": "More Information",
        "label": "Tab One"
      },
      {
        "type": "text",
        "id": "tab_heading_two",
        "default": "Technical Specs",
        "label": "Tab Two"
      },
      {
        "type": "text",
        "id": "tab_heading_three",
        "default": "Image Circle",
        "label": "Tab Three"
      },
      {
        "type": "text",
        "id": "tab_heading_four",
        "default": "User Manual",
        "label": "Tab Four"
      },
      {
        "type": "text",
        "id": "user_manual",
        "label": "User Manual PDF Link",
        "info": "Upload the user manual in files and paste the link here."
      }
    ]
  }
{% endschema %}
<!-- main slider -->

<section class="slider-sec">
  <div class="hero-slider-home">
    {% for block in section.blocks %}
      <div class="slide-main">
        {% if block.settings.image != blank %}
          <div class="slider-card" loading="lazy" style="background-image: url('{{ block.settings.image | img_url: 'master' }}');">
          {% else %}
            <div class="slider-card" loading="lazy" style="background-image: url('{{ 'collecion-1' | placeholder_svg_tag }}');"></div>
          {% endif %}
          <div class="container">
            <div class="slider-content-block d-flex flex-column justify-content-between align-items-center">
              <div class="header-block">
                <h2 data-aos="fade-left">
                  {{ block.settings.subheading }}
                </h2>
                <h1 data-aos="fade-up">{{ block.settings.heading }}</h1>
              </div>
              <div class="buttons-block">
                <a data-aos="zoom-in" href="products.html" class="primary-btn">
                  <span>
                    {{ block.settings.button_text }}
                  </span>
                </a>
                <button id="scrollBtn" class="mx-auto d-block">
                  {%- render 'icon-scroll' -%}
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

</section>

{% schema %}
  {
    "name": "Slider",
    "settings": [],
    "blocks": [
      {
        "name": "Slide",
        "type": "Slide",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Subheading"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text"
          }, {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
          }
        ]

      }
    ],
    "presets": [
      {
        "name": "Custom Slider",
        "category": "Custom Sections"
      }
    ]
  }
{% endschema %}
<!-- our vision section section -->
<section class="our-vision-sec">
  <div class="vision-container">

    {{ page.content }}

    <div class="contact-form-block">
      <h3 data-aos="fade-left" data-aos-duration="1000" class="title text-center">
        CONTACT
      </h3>
      <div data-aos="fade-left" data-aos-duration="1500" class="form-block">
        <form action="">
          <div class="input-style">
            <label class="input-label" for="">
              Your Name (required)
            </label>
            <input type="text" class="ctm-input">
          </div>
          <div class="input-style">
            <label class="input-label" for="">
              Your Email (required)
            </label>
            <input type="email" class="ctm-input">
          </div>
          <div class="input-style">
            <label class="input-label" for="">
              Subject
            </label>
            <input type="text" class="ctm-input">
          </div>
          <div class="input-style">
            <label class="input-label" for="">
              Your Message
            </label>
            <textarea class="ctm-textarea"></textarea>
          </div>
          <div class="d-flex justify-content-end">
            <button class="primary-btn">
              <span>
                SEND
              </span>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Content",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Form Heading"
      }
    ]
  }
{% endschema %}
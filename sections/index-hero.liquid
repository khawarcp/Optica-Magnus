<!-- call to action section -->

<section class="call-to-action-sec">
  <div class="call-to-action-block" loading="lazy" style="background-image: url('{{ section.settings.image | img_url: 'master' }}');">
    <div class="desc-block">
      <h4 data-aos="fade-left" data-aos-duration="1000" class="title">
        {{ section.settings.heading }}
      </h4>
      {%- if section.settings.button_text != blank -%}
        <a data-aos="fade-up" data-aos-duration="1000" href="{{ section.settings.button_url }}" class="primary-btn mx-auto">
          <span>{{ section.settings.button_text }}</span>
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Magnification Of Multiple Formats from Academy To Full Frame And 2 X Anamorphic."
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "DISCOVER OUR PRODUCTS"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }
    ],
    "presets": [
      {
        "category": "Custom Sections",
        "name": "Hero"
      }
    ]
  }
{% endschema %}
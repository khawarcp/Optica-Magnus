<section class="products-banner">
  {% if template contains 'collection' %}
    <div class="banner-content" loading="lazy" style="background-image: url('{{ collection.image | img_url: 'masater' }}');"></div>
  {% else %}
    <div class="banner-content" loading="lazy" style="background-image: url('{{ section.settings.image | img_url: 'masater' }}');">
    {% endif %}
    <div class="sec-header">
      <h2 data-aos="fade-down" data-aos-duration="1000" class="prime-title">
        {{ section.settings.heading }}
      </h2>
      <h3 data-aos="fade-up" data-aos-duration="1000" class="secondary-title mb-0">
        {% if template contains 'page'  %}
          {{ page.title }}
        {% elsif template contains 'collection' %}
          {{ collection.title }}
        {% elsif template contains 'product' %}
          {{ product.title }}
        {% elsif template contains 'search' %}
          {% if search.terms != blank %}
            {{ search.terms }}
          {% else %}
            Search
          {% endif %}
        {% elsif template contains 'cart' %}
          Cart
        {% endif %}
      </h3>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Image"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "presets": [
      {
        "name": "Page Banner",
        "category": "Custom Sections"
      }
    ]
  }
{% endschema %}